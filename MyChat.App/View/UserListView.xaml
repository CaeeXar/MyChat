<UserControl x:Class="MyChat.App.Views.UserListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyChat.App.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <Border
            Grid.Column="0"
            Grid.Row="0"
            BorderBrush="Black"
            BorderThickness="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            CornerRadius="5"
            Padding="5" 
            Height="50">
            <StackPanel Orientation="Horizontal">
                <TextBox
                    x:Name="SearchTextBox" 
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                    Width="200"
                    VerticalContentAlignment="Center"
                    BorderThickness="0"
                    Background="Transparent" 
                    FontSize="16">
                    <TextBox.InputBindings>
                        <!--<KeyBinding Key="Return" Command="{Binding SearchCommand}"/>-->
                    </TextBox.InputBindings>
                </TextBox>

                <Rectangle 
                    VerticalAlignment="Stretch"
                    Margin="0, -3, 0, -3"
                    Fill="Black"
                    Width="1"
                    />

                <Button 
                    x:Name="SearchButton"
                    Content="&#xE721;"
                    FontFamily="Segoe MDL2 Assets"
                    Width="50"
                    FontSize="18" 
                    FontWeight="Bold"
                    Background="Transparent"
                    Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border 
                                Background="{TemplateBinding Background}"
                                BorderThickness="2"
                                CornerRadius="5">
                                <ContentPresenter 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="{TemplateBinding Content}"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <!--
                                
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Black"/>
                                </Trigger>

                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="Background" Value="Red"/>
                                </Trigger>

                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="Green"/>
                                </Trigger>
                                
                                -->
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>

        <ListBox 
            x:Name="UserListBox"
            Grid.Column="0"
            Grid.Row="1"
            ItemsSource="{Binding FilteredUsers}" 
            d:ItemsSource="{d:SampleData ItemCount=5}" 
            HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid
                        Height="50" 
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock 
                            Text="{Binding Id}"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center" />

                        <TextBlock 
                            Text="{Binding Username}"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center" />

                        <TextBlock 
                            Text="{Binding Email}" 
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center" />

                        <Button    
                            x:Name="EditButton"
                            Command="{Binding DataContext.NavigateToUserCommand, ElementName=UserListBox}"
                            CommandParameter="{Binding}"
                            IsHitTestVisible="True"
                            Focusable="False"
                            Grid.Column="3"
                            Content="&#xE70F;"
                            FontFamily="Segoe MDL2 Assets"
                            Width="50"
                            FontSize="18" 
                            FontWeight="Bold"
                            Background="Transparent"
                            Cursor="Hand" 
                            HorizontalAlignment="Right">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border 
                                        x:Name="ButtonBorder"
                                        Background="Transparent"
                                        BorderThickness="2"
                                        CornerRadius="5">               
                                        <ContentPresenter 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{TemplateBinding Content}"/>
                                    </Border>
                                    
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ButtonBorder" Property="Background" Value="LightBlue"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
